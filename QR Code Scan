  <style>
    body {
      background-color: #0f172a;
      color: #f8fafc;
      font-family: 'Segoe UI', sans-serif;
      text-align: center;
      padding: 20px;
    }

    #reader {
      width: 100%;
      max-width: 340px;
      margin: auto;
      border-radius: 10px;
      overflow: hidden;
    }

    #result {
      margin-top: 20px;
      padding: 15px;
      background-color: #1e293b;
      border-radius: 10px;
      font-size: 18px;
      display: none;
    }

    button {
      padding: 10px 20px;
      font-size: 16px;
