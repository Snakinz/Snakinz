<body>

  <h2>ðŸ“· Live QR Code Scanner</h2>
  <button onclick="startScan()">Start Scanning</button>
  <div id="reader" style="display:none;"></div>
  <div id="result"></div>

  <!-- Beep Sound -->
  <audio id="beep" src="https://actions.google.com/sounds/v1/alarms/beep_short.ogg" preload="auto"></audio>

  <script>
    let scanner;
    const resultDiv = document.getElementById("result");
    const beep = document.getElementById("beep");

    function startScan() {
      document.querySelector("button").style.display = "none";
      document.getElementById("reader").style.display = "block";

      scanner = new Html5Qrcode("reader");

      Html5Qrcode.getCameras().then(devices => {
        if (devices.length) {
          const cam = devices.find(c => c.label.toLowerCase().includes("back")) || devices[0];

          scanner.start(
            { deviceId: { exact: cam.id } },
            { fps: 10, qrbox: 250 },
            (decodedText) => {
              beep.play();
              resultDiv.style.display = "block";
              resultDiv.textContent = `âœ… QR Code Detected: ${decodedText}`;
              scanner.stop();
            },
            (errorMessage) => {
              // Silent scan fail
            }
          );
        } else {
          resultDiv.style.display = "block";
          resultDiv.textContent = "ðŸš« No camera found.";
        }
      }).catch(err => {
        resultDiv.style.display = "block";
        resultDiv.textContent = "ðŸš« Camera error: " + err;
      });
    }
  </script>

</body>
</html>
